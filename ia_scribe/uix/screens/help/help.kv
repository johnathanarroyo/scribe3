<KeyboardShortcut>:
    size_hint_y: None
    height: '40dp'
    spacing: '5dp'
    Label:
        text: root.description
        color: 0, 0, 0, 1
        text_size: self.size
        size_hint_x_min: '300dp'
        valign: 'center'
        shorten: True
        bold: True
    Label:
        text: root.key_combination
        color: 0, 0, 0, 1
        size_hint_x_min: '300dp'
        text_size: self.size
        valign: 'center'
        shorten: True


<KeyboardShortcutsPanel>:
    cols: 1
    spacing: '15dp'
    size_hint_y: None
    height: self.minimum_height
    Label:
        size_hint_y: None
        height: '50dp'
        text: 'Keyboard shortcuts'
        bold: True
        font_size: '22sp'
        color: 0, 0, 0, 1
    GridLayout:
        cols: 2
        size_hint_y: None
        height: self.minimum_height
        Label:
            size_hint_y: None
            height: '50dp'
            text: 'Book View'
            color: 0, 0, 0, 1
            underline: True
        Label:
            size_hint_y: None
            height: '50dp'
            text: 'Re-shooting index'
            color: 0, 0, 0, 1
            underline: True
    GridLayout:
        cols: 2
        spacing: '60dp'
        padding: '50dp', 0
        size_hint_y: None
        height: self.minimum_height
        canvas:
            Color:
                rgb: 0.5, 0.5, 0.5
            Line:
                points: self.center_x, self.y, self.center_x, self.top
                width: int(dp(1))
        GridLayout:
            id: capture_screen_shortcuts
            cols: 1
            size_hint_y: None
            height: max(self.minimum_height, reshoot_screen_shortcuts.minimum_height)
        GridLayout:
            id: reshoot_screen_shortcuts
            cols: 1
            size_hint_y: None
            height: max(self.minimum_height, capture_screen_shortcuts.minimum_height)


<Help>:
    size_hint: None, None
    on_dismiss: content.scroll_y = 1.0
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        padding: '6dp'
        canvas:
            Color:
                rgb: 0, 0, 0
            Line:
                rectangle: self.x + 4, self.y + 4, self.width - 8, self.height - 8
                width: dp(1)
        ScrollView:
            id: content
            do_scroll_x: False
            effect_cls: 'ScrollEffect'
            scroll_type: ['bars']
            bar_width: '15dp'
            bar_color: 0.5, 0.5, 0.5, 0.9
            bar_inactive_color: 0.7, 0.7, 0.7, 0.7
            scroll_wheel_distance: '50dp'
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                padding: '15dp', '8dp'
                KeyboardShortcutsPanel:
                    id: keyboard_panel
