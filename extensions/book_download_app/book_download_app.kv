<BookDownloadAppContainer>:
    title: 'Book download extension'
    BookDownloadAppScreen:
        id: _slip_app_screen
        name: 'slip_app_screen'
        task_scheduler: root.task_scheduler
        library: root.library


<BookDownloadAppScreen>:
    BoxLayout:
        canvas:
            Color:
                rgb: 0.92, 0.92, 0.92
            Rectangle:
                pos: self.x, self.y
                size: self.width, self.height
        padding: 10
        orientation: 'vertical'
        BoxLayout:
            size_hint: (.95, None)
            height: 40
            spacing: 10
            canvas.after:
                Color:
                    rgb: .75,.75,.75
                Line:
                    points: self.x,self.y,self.x+self.width,self.y
                    width: 1
            Image:
                source: 'download_black.png'
                size: 40, 40
                size_hint: None, None
            BlackLabel:
                id: _title_label
                text: 'Download book'
                font_size: '28dp'


        GridLayout:
            rows: 2

            BoxLayout:
                orientation: 'vertical'
                size_hint_max_y: '150dp'
                BlackLabel:
                    text: 'Input the identifier of the book you would like to download.'
                    font_size: '25sp'
                    pos_hint: {'center_y': 0.5}
                    halign: 'center'
                    valign: 'middle'
                BlackLabel:
                    text: 'Please note the book must have been pre-processed'
                    font_size: '18sp'
                    pos_hint: {'center_y': 0.5}
                    halign: 'center'
                    valign: 'middle'


            GridLayout:

                halign: 'center'
                valign: 'middle'
                cols: 2
                pos_hint: {'center_y': 0.5}
                padding: '20dp'
                orientation: 'vertical'

                GridLayout:
                    rows: 2
                    size_hint_y: None

                    spacing: '5dp'
                    TextInput:
                        id: identifier_input
                        hint_text: 'Identifier'
                        multiline: False
                        font_size: '20dp'
                    ColorButton:
                        id: _button
                        text: 'Load'
                        disabled: not bool(identifier_input.text)
                        pos_hint: {'center_x': 0.5}
                        on_release: root.load_identifier(identifier_input.text)
                        font_size: '20dp'

